<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MobileMetricsTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/appListRoot"
    android:weightSum="100"
    tools:context=".AppListActivity" >

    <RelativeLayout
        android:id="@+id/bottomRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="100dp"
            style="@style/MobileMetricsDefaultButton"
            android:layout_height="wrap_content"
            android:onClick="about"
            android:text="@string/about" />

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/MobileMetricsDefaultButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="logout"
            android:text="@string/logout" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewAppList"
        style="@style/MobileMetricsListViewTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomRelativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewSelectApp" >

    </ListView>
    
    <TextView
        android:id="@+id/textViewSelectApp"
        style="@style/MobileMetricsDefaultHeaderText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:paddingLeft="-10dp"
        android:paddingRight="-10dp"
        android:text="@string/select_app" />

    <ProgressBar
        android:id="@+id/progressBarAppList"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>